<p id="notice"><%= notice %></p>

<h1>Mostrando Categorias</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.nome %></td>
        <td><%= link_to 'Show', category, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_category_path(category), class: "btn btn-info" %></td>
        <td><%= button_to 'Destroy', category, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

